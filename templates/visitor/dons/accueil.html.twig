{% extends "visitor/base.html.twig" %}

{% block body %}
    <div class="wrapper-page">
        <div class="container">
            <div class="row">
                <div class="col-xs-12 col-md-8 col-md-offset-2 text-center">
                    <h1>Les groupes locaux #MAVOIX sont en campagne dans {{ groups|length }} circonscriptions !</h1>


                    {% for group in groups %}

                        <div class="panel panel-default m-b-x2 text-left">
                            <div class="panel-heading p-b ">
                                <h3 class="no-margin" >{{group.departement.code}} - {{ group.departement.name}}<span class="btn btn-default pull-right">Objectif : <span class="badge">{{  group.amount_target|number_format(0, ',', ' ') }} €</span></span></h3>
                                <div>{{ sup(group.circonscription.number,'f',false) }} circonscription</div>
                                <a href="{{group.map_url}}" target="_blank">Où est-ce ?</a>
                            </div>
                            <div class="panel-body">


                                <div class="row">
                                    <div class="col-xs-6 col-sm-3"> <div style="background-image:url('/{{ group.path_pic_fit }}');"
                                                                class="square-pic-group"></div></div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-xs-10 col-xs-offset-1">
                                    <div class="progress mavoix ">
                                        <div class="progress-bar"   role="progressbar"  style="width: {{  group.income_percent }}%">
                                            <span >{{  group.income_amount|number_format(0, ',', ' ') }} €</span>
                                        </div>
                                        <div class="progress-bar"  role="progressbar"  style="width: {{  group.pledge_percent }}%">
                                            <span >{{  group.pledge_amount|number_format(0, ',', ' ') }} €</span>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="row m-b-x2">
                                <div class="col-xs-12 text-center">
                                    <a href="/dons/participation.html?id={{ group.id }}" class="btn btn-lg btn-primary">Je participe !</a>
                                </div>
                            </div>
                        </div>


                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
